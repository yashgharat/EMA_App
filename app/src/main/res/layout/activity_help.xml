<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkForeground"
    android:orientation="vertical"
    tools:context=".Activities.HelpActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/helpPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_arrow_back_blue_30dp"
            android:scaleX="1"
            android:scaleY="1"
            app:backgroundTint="@color/transparent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:text="Help Center"
            android:textColor="@color/darkProminent"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkForeground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/faq_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="11dp"
                android:textColor="@color/darkProminent"
                android:textSize="23sp"
                android:text="Frequently Asked Questions"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/apparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">


                        <TextView
                            android:id="@+id/q1Title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="10dp"
                            android:text="What's the deal?"
                            android:padding="10dp"
                            android:textColor="@color/darkProminent"
                            android:textSize="20sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                        <TextView
                            android:id="@+id/q1Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            app:layout_constraintTop_toBottomOf="@+id/q1Title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textColor="@color/darkProminent"
                            android:text="@string/dealAnswer"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/q1Arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginEnd="20dp"
                            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/support_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="11dp"
                android:textColor="@color/darkProminent"
                android:textSize="23sp"
                android:text="Get Support"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHotline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/apparent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/hotline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/titleHotline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Call Sexual Assault Hotline"
                            android:textColor="@color/darkProminent"
                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/descHotline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="Confidential help is available and free"
                            android:textColor="@color/darkProminent"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleHotline" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_phone_black_24dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintRight_toRightOf="@id/descHotline"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="5dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTCS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/apparent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/TCS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/titleTCS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Contact the Team"
                            android:textColor="@color/darkProminent"
                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/descTCS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="For research questions or support"
                            android:textColor="@color/darkProminent"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleTCS" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintRight_toRightOf="@id/descTCS"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="5dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

</LinearLayout>