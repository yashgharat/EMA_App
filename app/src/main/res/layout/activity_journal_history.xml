<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkForeground"
    tools:context=".Activities.JournalHistoryActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/journalHistoryPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_arrow_back_blue_30dp"
        android:scaleX="1"
        android:scaleY="1"
        app:backgroundTint="@color/transparent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/lblCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="completed"
        android:textColor="@color/darkProminent"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/completedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24"
        android:textColor="@color/darkProminent"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="6dp"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkProminent"
        android:drawableStart="@drawable/ic_check_black_24dp"
        app:layout_constraintRight_toLeftOf="@id/lblCompleted"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/lblMissed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="missed"
        android:textColor="@color/darkProminent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblCompleted"/>
    <TextView
        android:id="@+id/msisedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24"
        android:textColor="@color/darkProminent"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="6dp"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:drawableTint="@color/darkProminent"
        android:drawableStart="@drawable/ic_close_black_24dp"
        app:layout_constraintRight_toLeftOf="@id/lblCompleted"
        app:layout_constraintTop_toBottomOf="@id/completedCount"/>



</androidx.constraintlayout.widget.ConstraintLayout>