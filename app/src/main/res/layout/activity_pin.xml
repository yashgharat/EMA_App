<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/themeBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SecureLock.PinActivity">

    <TextView
        android:id="@+id/pin_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Sign Out"
        android:textColor="@color/primaryDark"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.poovam.pinedittextfield.CirclePinField
        android:id="@+id/pin_field"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:elevation="6dp"
        android:focusedByDefault="true"
        android:textSelectHandle="@drawable/text_handle"
        app:circleRadius="9dp"
        app:fieldBgColor="@color/themeBackground"
        app:fillerColor="@color/positive"
        app:fillerRadius="11dp"
        app:highlightColor="@color/disabled"
        app:lineThickness="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        android:inputType="numberPassword"
        app:noOfFields="4"/>

    <TextView
        android:id="@+id/title_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/prominent"
        android:textSize="34sp"
        android:layout_marginTop="110dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>