<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinActivity">

    <com.poovam.pinedittextfield.CirclePinField
        android:id="@+id/pinField"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_y="140dp"
        android:inputType="numberPassword"
        android:textSelectHandle="@drawable/text_handle"
        android:textSize="18sp"
        app:circleRadius="15dp"
        app:fieldBgColor="@color/darkProminent"
        app:fillerColor="@color/secondary"
        app:fillerRadius="10dp"
        app:highlightColor="@color/primaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:noOfFields="4"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>