<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/themeBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PinActivity">

    <com.poovam.pinedittextfield.CirclePinField
        android:id="@+id/pinField"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_y="140dp"
        android:focusedByDefault="true"
        android:textSelectHandle="@drawable/text_handle"
        android:textSize="18sp"
        app:circleRadius="15dp"
        app:fieldBgColor="@color/unapparent"
        app:fillerColor="@color/secondary"
        app:fillerRadius="10dp"
        app:highlightColor="@color/primaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        app:noOfFields="4"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/title_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="78dp"
        android:textColor="@color/prominent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>