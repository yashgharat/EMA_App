<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    tools:context=".Activities.screenshotHistoryActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/screenshotsHistoryPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_arrow_back_blue_30dp"
        android:scaleX="1"
        android:scaleY="1"
        app:backgroundTint="@color/unapparent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/screenshots_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screenshot History"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/prominent"
        android:layout_marginTop="37dp"
        android:layout_marginStart="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/screenshotsHistoryPrevious"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/screenshots_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/screenshots_history_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/when_empty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="There's nothing here. Come back when you have uploaded something"
            android:textSize="20sp"
            android:textAlignment="center"
            android:visibility="visible"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerscreenshots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"/>
        </LinearLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>