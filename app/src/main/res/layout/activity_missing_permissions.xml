<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    android:orientation="vertical"
    tools:context=".Activities.ManifestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/oops_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Sign Out"
            android:textColor="@color/primaryDark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oops_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uh Oh! "
                android:textColor="@color/prominent"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tag_faces_black_50dp"
                android:rotation="180"/>
        </LinearLayout>

        <TextView
            android:id="@+id/oops_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:text="You seem to have turned off usage access for 30 Days. Please consider enabling it again so that 30 Days may continue collecting useful data for the study."
            android:textColor="@color/apparent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/agr_p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:text="@string/agreement_p2"
            android:textColor="@color/apparent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_oops_grant_access"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ripple_effect"
            android:text="Grant Access"
            android:textColor="@color/themeBackground"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/oops_more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="What Data Is Collected?"
            android:textAlignment="center"
            android:textColor="@color/secondary"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>