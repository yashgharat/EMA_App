<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    tools:context=".Activities.PostActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/post_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        app:backgroundTint="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_blue_30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:text="30 Days Complete"
            android:textColor="@color/prominent"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:text="Thank you for participating. All 30 days have passed, and your participation is coming to an end.\n\nPlease take the following post-survey to help us understand your experience and hear your feedback.\n\nYouâ€™ll then receive an email from us going over the next steps."
            android:textColor="@color/apparent"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_post"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:background="@drawable/ripple_effect"
            android:text="Take Post Survey"
            android:textColor="@color/themeBackground"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>