<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.createPinUIActivity">

    <TextView
        android:id="@+id/secureLockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Lock"
        android:textColor="@color/prominent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="150dp"
        android:layout_marginStart="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/quickPara"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="25dp"
        android:text="Set a 4-digit passcode to lock 30 Days"
        android:textSize="17sp"
        android:textColor="@color/prominent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secureLockTitle"/>

    <Button
        android:id="@+id/btnQuickSignIn"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:text="Use Secure Lock"
        android:background="@color/primary"
        android:textColor="@color/apparent"
        android:layout_marginTop="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickPara"
        />

    <TextView
        android:id="@+id/skipLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:text="Not Now"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/btnQuickSignIn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>