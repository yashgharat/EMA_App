<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EnterEmailActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/enter_email_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        app:backgroundTint="@color/unapparent"
        app:srcCompat="@drawable/ic_arrow_back_blue_30dp" />

    <TextView
        android:id="@+id/enter_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp"
        android:text="Reset Password"
        android:textColor="@color/prominent"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter_email_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="11dp"
        android:textColor="@color/prominent"
        android:textSize="23sp"
        android:text="Please enter the email address used on your account. We'll send you an email with instructions"/>

    <EditText
        android:id="@+id/reset_email"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:textColor="@color/prominent"
        android:textColorHint="@color/normal"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"/>

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/button_send_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/themeBackground"
        android:textSize="18sp"
        android:text="Send Email"/>


</LinearLayout>