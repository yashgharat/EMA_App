<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    tools:context=".Activities.ForgotPasswordActivity">

    <TextView
        android:id="@+id/forgotPassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Reset Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/darkProminent"
        android:layout_marginStart="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forgotPass"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="New Password"
        android:textColor="@color/darkProminent"
        android:textColorHint="@color/normal"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/forgotPassTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/veriCode"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Verification Code"
        android:textColor="@color/darkProminent"
        android:textColorHint="@color/normal"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/forgotPass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:text="Reset"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/darkForeground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veriCode" />

</androidx.constraintlayout.widget.ConstraintLayout>