<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unapparent"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/themeBackground">

        <ImageView
            android:id="@+id/dash_logo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/study_ctr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/prominent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toStartOf="@id/study_ctr_label"
            app:layout_constraintTop_toBottomOf="@id/dash_logo" />
        <TextView
            android:id="@+id/study_ctr_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" days left in this study"
            app:layout_constraintTop_toBottomOf="@id/dash_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/main_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardJournal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp">

                <LinearLayout
                    android:id="@+id/layoutJournal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/themeBackground"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/journal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/titleJournal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Ready For Daily Journal"
                            android:textStyle="bold"
                            android:textColor="@color/prominent"
                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/msgJournal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="Due by Midnight"
                            android:textColor="@color/apparent"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleJournal" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:tint="@color/disabled"
                            app:layout_constraintRight_toRightOf="@id/journal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic__ionicons_svg_ios_create" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/unapparent">

                        <TextView
                            android:id="@+id/viewHistory_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="View History"
                            android:textColor="@color/primaryDark"
                            android:textSize="17sp"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintLeft_toRightOf="@+id/viewHistory_1"
                            app:layout_constraintTop_toTopOf="@id/history"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

                        <TextView
                            android:id="@+id/numSurveys"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="30dp"
                            android:text="0"
                            android:textColor="@color/disabled"
                            android:textSize="17sp"
                            app:layout_constraintRight_toRightOf="@id/history"
                            app:layout_constraintTop_toTopOf="@+id/history" />

                        <ImageView
                            android:id="@+id/check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="20dp"
                            android:tint="@color/disabled"
                            app:layout_constraintRight_toRightOf="@id/numSurveys"
                            app:layout_constraintTop_toTopOf="@id/history"
                            app:srcCompat="@drawable/ic_check_black_24dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardThoughts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_ripple_effect"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/thoughts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/titleThoughts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Share Your Thoughts"
                            android:textStyle="bold"
                            android:textColor="@color/prominent"
                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/msgExperience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="Talk about your experiences anytime."
                            android:textColor="@color/apparent"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleThoughts" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintRight_toRightOf="@id/thoughts"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_question_answer_black_24dp" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/history2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/unapparent">

                        <TextView
                            android:id="@+id/viewHistory_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="View History"
                            android:textColor="@color/primary"
                            android:textSize="17sp"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <ImageView
                            android:id="@+id/arrow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintLeft_toRightOf="@+id/viewHistory_2"
                            app:layout_constraintTop_toTopOf="@id/history2"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_ripple_effect"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/help"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/titleHelp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Help Center"
                            android:textStyle="bold"
                            android:textColor="@color/prominent"
                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/faq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="Read the FAQ or get support"
                            android:textColor="@color/apparent"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleHelp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintRight_toRightOf="@id/help"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_help_black_40dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_ripple_effect"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/titleSettings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Settings"
                            android:textColor="@color/prominent"
                            android:textStyle="bold"

                            android:textSize="20sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/customize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"
                            android:text="Customize journal reminders and more"
                            android:textColor="@color/apparent"
                            android:textSize="12sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/titleSettings" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:tint="@color/primaryDark"
                            app:layout_constraintRight_toRightOf="@id/settings"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_settings_black_40dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--            <Button-->
<!--                android:id="@+id/scrapeBtn"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/ripple_effect"-->
<!--                android:textColor="@color/apparent"-->
<!--                android:text="Scrape Test"/>-->
        </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>