<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    android:orientation="vertical"
    tools:context=".Activities.MoreInfoActivity">

    <ImageView
        android:id="@+id/moreinfoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_blue_50dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/moreInfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:text="Data Collected"
        android:textColor="@color/prominent"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/agr_p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/prominent"
        android:textSize="20sp"
        android:text="@string/moreInfo_p1"/>
    <TextView
        android:id="@+id/agr_p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/apparent"
        android:textSize="17sp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/moreInfo_p2"/>
    <Button
        android:id="@+id/btnGrantAccess2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/apparent"
        android:textSize="18dp"
        android:text="Grant Access"/>


</LinearLayout>