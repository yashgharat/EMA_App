<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    android:orientation="vertical"
    tools:context=".ManifestActivity">

    <TextView
        android:id="@+id/data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:text="Data Usage"
        android:textColor="@color/LightningWhite"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/agr_p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="11dp"
        android:textColor="@color/LightningWhite"
        android:textSize="23dp"
        android:text="@string/agreement_p1" />

    <TextView
        android:id="@+id/agr_p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:textColor="@color/LightningWhite"
        android:textSize="23dp"
        android:text="@string/agreement_p2" />

    <Button
        android:id="@+id/btnGrantAccess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/secondaryAccent"
        android:textColor="@color/primaryGray"
        android:textSize="18dp"
        android:text="Grant Access" />

    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@color/secondaryAccent"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="What Data Is Collected?" />


</LinearLayout>