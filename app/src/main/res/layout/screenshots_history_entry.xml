<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/themeBackground">

    <TextView
        android:id="@+id/screenshots_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday at 10 PM"
        android:textStyle="bold"
        android:textColor="@color/prominent"
        android:textSize="17sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/screenshot_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Includes screenshot"
        android:textSize="15sp"
        android:textColor="@color/apparent"
        android:padding="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/screenshots_time"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/prominent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/screenshot_label"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>