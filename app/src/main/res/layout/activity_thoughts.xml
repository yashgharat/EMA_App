<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkForeground"
    android:orientation="vertical"
    tools:context=".Activities.ThoughtsActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/helpThoughts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_arrow_back_blue_30dp"
        android:scaleX="1"
        android:scaleY="1"
        app:backgroundTint="@color/transparent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/thoughts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:text="Share Your Thoughts"
        android:textColor="@color/darkProminent"
        android:textSize="50sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/thoughts_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/darkProminent"
        android:textSize="23sp"
        android:text="@string/interaction"/>

    <EditText
        android:id="@+id/ethoughts_upload"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/apparent"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />


</LinearLayout>