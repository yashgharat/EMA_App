<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkForeground"
    android:orientation="vertical"
    tools:context=".Activities.ThoughtsActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/thoughtsPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        app:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/ic_arrow_back_blue_30dp" />

    <TextView
        android:id="@+id/thoughts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:text="Share Your Thoughts"
        android:textColor="@color/darkProminent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thoughts_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/interaction"
        android:textColor="@color/darkProminent"
        android:textSize="23sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/thoughts_upload"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@color/apparent"
                android:elevation="22dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Describe an online interaction..."
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="@color/darkProminent"
                android:textColorHint="@color/normal" />

            <TextView
                android:id="@+id/screenshotLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_add_black_24dp"
                android:padding="8dp"
                android:text=" Add a Screenshot"
                android:textColor="@color/primaryDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnThoughts"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/primary"
                android:drawableLeft="@drawable/ic_arrow_upward_black_24dp"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="@color/darkForeground"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>