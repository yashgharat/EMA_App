<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    tools:context=".AuthenticationActivity">

    <TextView
        android:id="@+id/authTitle"
        android:layout_width="287dp"
        android:layout_height="92dp"
        android:layout_marginTop="84dp"
        android:text="Welcome to Our Diary Study"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/LightningWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Email Address"
        android:textColor="@color/LightningWhite"
        android:textColorHint="@color/primaryAccent"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/authTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="62dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textColor="@color/LightningWhite"
        android:textColorHint="@color/primaryAccent"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="62dp" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:layout_marginTop="60dp"
        android:text="Sign In"
        android:background="@color/secondaryGray"
        android:textColor="@color/primaryBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/regLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="140dp"
        android:text="Register"
        android:layout_marginTop="627dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/primaryAccent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="568dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="627dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Not a user?"
        android:textColor="@color/LightningWhite"
        app:layout_constraintEnd_toStartOf="@+id/regLink"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>