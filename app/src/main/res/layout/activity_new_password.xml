<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    tools:context=".Activities.newPassword">

    <TextView
        android:id="@+id/newPassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="New Password"
        android:textColor="@color/darkProminent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginStart="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ownPass"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="25dp"
        android:text="Please choose your own password to sign into your account with"
        android:textColor="@color/darkProminent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newPassTitle"/>

    <EditText
        android:id="@+id/newPassUno"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textColor="@color/darkProminent"
        android:textColorHint="@color/normal"
        android:inputType="textPassword"
        android:hint="New Password"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/ownPass"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/newPassDos"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textColor="@color/darkProminent"
        android:textColorHint="@color/normal"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/newPassUno"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btnSetPass"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginTop="75dp"
        android:text="Set Password"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/darkForeground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassDos"/>

</androidx.constraintlayout.widget.ConstraintLayout>