<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBackground"
    android:orientation="vertical"
    tools:context=".Activities.NewPassword">

    <TextView
        android:id="@+id/new_pass_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Sign Out"
        android:textColor="@color/primaryDark"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/new_pass_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:text="New Password"
        android:textColor="@color/prominent"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/own_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Please choose your own password for signing into your account"
        android:textSize="20sp"
        android:textColor="@color/apparent" />

    <EditText
        android:id="@+id/new_pass_uno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/prominent"
        android:textColorHint="@color/normal" />

    <TextView
        android:id="@+id/helperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="4dp"
        android:text="@string/pass_para"
        android:textColor="@color/disabled" />


    <Button
        android:id="@+id/button_set_pass"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/ripple_effect"
        android:text="Set Password"
        android:textColor="@color/themeBackground" />

</LinearLayout>